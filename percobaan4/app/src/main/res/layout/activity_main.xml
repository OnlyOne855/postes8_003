<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    tools:context=".MainActivity">

    <!-- Bagian Header -->
    <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher_round"
            android:layout_marginEnd="8dp"
            android:background="@drawable/profile_circle" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Welcome Back,"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
            <TextView
                android:text="Mustofa Abdurrahim"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="auto"
            android:src="@drawable/ic_notifications"
            android:tint="@android:color/black" />
    </LinearLayout>

    <!-- Energy Usage Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/energyCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="Energy Usage"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:text="Today"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:text="5.0 w/h"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DDD"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:text="This Month"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:text="0.005 kWh"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Grid Info -->
    <GridLayout
        android:id="@+id/infoGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/energyCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Sisa Pakan -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            app:layout_columnWeight="1"
            app:cardBackgroundColor="#4DB6AC">

            <TextView
                android:text="Sisa Pakan: 98%"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <!-- Perangkat -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            app:layout_columnWeight="1"
            app:cardBackgroundColor="#8BC34A">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:text="1 Device Aktif"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- pH Air -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp"
            app:layout_columnWeight="1"
            app:cardBackgroundColor="#03A9F4">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="pH Air"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:text="7"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
